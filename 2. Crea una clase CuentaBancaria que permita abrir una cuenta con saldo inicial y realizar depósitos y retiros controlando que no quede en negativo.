<?php
class CuentaBancaria {
    private float $saldo;

    public function __construct(float $saldoInicial) {
        $this->saldo = max(0, $saldoInicial); // Asegura que el saldo inicial no sea negativo
    }

    public function depositar(float $monto): void {
        if ($monto > 0) {
            $this->saldo += $monto;
            $this->mostrarMensaje("Dep칩sito exitoso");
        } else {
            $this->mostrarMensaje("Monto inv치lido para dep칩sito");
        }
    }

    public function retirar(float $monto): void {
        if ($monto > 0 && $monto <= $this->saldo) {
            $this->saldo -= $monto;
            $this->mostrarMensaje("Retiro exitoso");
        } else {
            $this->mostrarMensaje("Monto inv치lido o saldo insuficiente");
        }
    }

    public function mostrarSaldo(): void {
        echo "Saldo actual: $" . number_format($this->saldo, 2) . "\n";
    }

    private function mostrarMensaje(string $mensaje): void {
        echo $mensaje . ". Saldo actual: $" . number_format($this->saldo, 2) . "\n";
    }
}
